<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorAccent">?attr/colorSecondary</item>

        <item name="android:textColorPrimary">@color/titleTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>

        <item name="android:fontFamily">@font/lato</item>

        <item name="actionBarStyle">@style/AppTheme.Toolbar</item>
    </style>


    <style name="TextAppearance.AppTheme.HeroGuide" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AppTheme.HeroGuide.Title">
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.AppTheme.HeroGuide.Text.Body">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Widget.AppTheme.HeroGuide.Text.Body.Title">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="Widget.AppTheme.HeroGuide.Text" parent="android:Widget">
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/toolbarTitleColor</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="TextAppearance.AppTheme.CardText" parent="android:TextAppearance">
        <item name="android:textColor">@color/cardSubtitleColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.AppTheme.CardText.Title" parent="TextAppearance.AppTheme.CardText">
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
